<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pelaksana.kebisingan.ScheduleKebisinganActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Kebisingan"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="18dp"
            android:id="@+id/judul"
            android:textColor="@color/bw_10"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvschedulekebisingan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:layout_marginStart="17dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="24dp" />
        <TextView
            android:id="@+id/tvkosong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/judul"
            android:text="Schedule masih kosong "
            android:gravity="center"
            android:textColor="@color/bw_10"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>