<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pelaksana.eloto.TambahIsolasiActivity">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_top" />

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Tambah Data Isolasi"
                android:textColor="@color/primary_31"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/judul"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp">

                <!--                TGL-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/edt_tgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:text="fjdfjdhj"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                PIC-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PIC"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                POSISI ISOLASI-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posisi Isolasi"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_pos_isolasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

<!--                EVIDEN-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eviden"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp">

                    <ImageView
                        android:id="@+id/foto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/border_foto"
                        android:src="@drawable/no_image"/>
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/add_foto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="@color/primary_82"
                        android:padding="0dp"
                        android:src="@drawable/ic_plus"
                        app:tint="@color/black" />
                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Simpan"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/bw_100"
                    android:id="@+id/btn_k3"
                    android:paddingVertical="16dp"
                    app:backgroundTint="@color/primary_71"
                    app:cornerRadius="50dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</layout>
