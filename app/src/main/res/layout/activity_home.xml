                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/edg_blok_1"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/txtedgblok2"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="16dp"
                    android:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edgblok" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/edg_blok_2"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/txtedgblok3"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="16dp"
                    android:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edgblok" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/edg_blok_3"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/txtmobildamkar"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="16dp"
                    android:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/damkar" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/mobil_damkar"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/txtmobilambulance"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="16dp"
                    android:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ambulance" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/mobil_ambulance"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/lyg"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="5dp"
                android:background="@color/bw_70" />

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/garis"
                android:id="@+id/txtpelaksana"
                android:layout_columnWeight="1"
                android:layout_margin="16dp"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:elevation="16dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pelaksana"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="PELAKSANA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
</ScrollView>
</layout>
