<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pelaksana.apat.CekApatActivity">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_top" />
            <LinearLayout
                android:id="@+id/top_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circlr_white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/apat" />

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detail Cek APAT"
                            android:id="@+id/nama"
                            android:textColor="@color/primary_31"
                            android:textSize="16sp"
                            android:layout_marginBottom="8dp"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="2dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kode"
                                    android:textColor="@color/bw_100"
                                    android:padding="5dp"
                                    android:background="@color/primary_60" />

                                <TextView
                                    android:id="@+id/txt_kode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/bw_100"
                                    android:paddingVertical="4dp"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="30dp"
                                    android:text="-"
                                    android:textColor="@color/primary_31" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_scan"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/top_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <!--                shift-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Shift" />
                    <TextView
                        android:id="@+id/txtshift"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Shift" />
                </LinearLayout>
                <!--                tgl pemeriksaan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Tanggal Pemeriksaan" />
                    <TextView
                        android:id="@+id/txttgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Shift" />
                </LinearLayout>
                <View
                    android:layout_marginVertical="15dp"
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/bw_70"/>
                <!--                lokasi-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Lokasi Penempatan" />
                    <TextView
                        android:id="@+id/txtlokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="-" />
                </LinearLayout>
                <!--                no bak-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="No. Bak APAT" />
                    <TextView
                        android:id="@+id/txtnobak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="-" />
                </LinearLayout>
                <View
                    android:layout_marginVertical="15dp"
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/bw_70"/>
                <!--                bak-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Bak" />
                    <Spinner
                        android:id="@+id/txtbak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1"
                        />
                </LinearLayout>
                <!--                pasir-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Pasir" />
                    <Spinner
                        android:id="@+id/txtpasir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1" />
                </LinearLayout>
                <!--                karung-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Karung" />
                    <Spinner
                        android:id="@+id/txtkarung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1" />
                </LinearLayout>
                <!--                ember-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Ember" />
                    <Spinner
                        android:id="@+id/txtember"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1" />
                </LinearLayout>
                <!--                sekop-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Sekop" />
                    <Spinner
                        android:id="@+id/txtsekop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1" />
                </LinearLayout>
                <!--                gantungan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Gantungan" />
                    <Spinner
                        android:id="@+id/txtgantungan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/bg_spinner_border"
                        android:entries="@array/arr1" />
                </LinearLayout>
                <View
                    android:layout_marginVertical="15dp"
                    android:layout_height="1px"
                    android:layout_width="match_parent"
                    android:background="@color/bw_70"/>
                <!--                keterangan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:text="Keterangan" />
                    <EditText
                        android:id="@+id/txtketerangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:hint="Keterangan"
                        android:background="@drawable/bg_edt_text_border"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginVertical="24dp">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Draft"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:id="@+id/btn_draft"
                        android:paddingVertical="16dp"
                        app:backgroundTint="@color/primary_94"
                        app:cornerRadius="100dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="4dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Submit"
                        android:layout_marginStart="11dp"
                        android:layout_weight="1"
                        android:textColor="@color/bw_100"
                        android:id="@+id/btn_submit"
                        android:paddingVertical="16dp"
                        app:backgroundTint="@color/primary_71"
                        app:cornerRadius="100dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>
