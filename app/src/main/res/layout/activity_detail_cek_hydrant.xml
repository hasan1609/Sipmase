<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<data>

</data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.hydrant.activity.DetailCekHydrantActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_top" />
        <LinearLayout
            android:id="@+id/top_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circlr_white"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hydrant" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detail Hydrant"
                        android:id="@+id/nama"
                        android:textColor="@color/primary_31"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="2dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kode"
                                android:textColor="@color/bw_100"
                                android:padding="5dp"
                                android:background="@color/primary_60" />
                            <TextView
                                android:id="@+id/txt_kode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Username"
                                android:textColor="@color/primary_31"
                                android:paddingVertical="4dp"
                                android:paddingStart="5dp"
                                android:paddingEnd="30dp"
                                android:background="@color/bw_100"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_head"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <!--                shift-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtshift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                tgl pemeriksaan-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tanggal Pemeriksaan"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txttgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="15dp"
                android:background="@color/bw_70" />
            <!--                lokasi-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lokasi Penempatan"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtlokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                no box-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No Box Hydrant"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtnobox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="15dp"
                android:background="@color/bw_70" />
            <!--                flashing-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Flashing"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtflashing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                main valve-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Main Valve"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtmain_valve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
<!--            dicharge valve-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discharge Valve"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtdicharge_valve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                kodisi box-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kondisi Box"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtkondisi_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                Kunci box-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kunci Box"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtkunci_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                kunci f-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kunci F"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtkunci_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                selang-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Selang"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtselang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                nozzle-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nozzle"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtnozzle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--                house keepeng-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="House Keeping"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txthouse_keeping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="15dp"
                android:background="@color/bw_70" />
            <!--                keterangan-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keterangan"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtketerangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shift"
                    android:textColor="@color/primary_31"
                    android:textSize="14sp" />
            </LinearLayout>
            <!--btn-->
            <LinearLayout
                android:id="@+id/ly_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginVertical="24dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tolak"
                    android:layout_weight="1"
                    android:textColor="@color/primary_31"
                    android:id="@+id/btn_tolak"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="16dp"
                    app:backgroundTint="@color/primary_94"
                    app:cornerRadius="100dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="4dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Terima"
                    android:layout_marginStart="11dp"
                    android:layout_weight="1"
                    android:textColor="@color/bw_100"
                    android:id="@+id/btn_terima"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="16dp"
                    app:backgroundTint="@color/primary_71"
                    app:cornerRadius="100dp"
                    android:layout_marginBottom="4dp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</layout>
