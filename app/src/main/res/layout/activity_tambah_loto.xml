<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pelaksana.eloto.TambahLotoActivity">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/bg_top" />

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Tambah Data E-Loto"
                android:textColor="@color/primary_31"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/judul"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp">

                <!--                TANGGAL-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/edt_tgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:text="fjdfjdhj"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

<!--                ID TAG-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID TAG"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/edt_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:text="fjdfjdhj"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

<!--                WO/SR-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WO / SR"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_wo_sr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                PERALATAN-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PERALATAN"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_peralatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                LOKASI-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lokasi"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                POSISI AWAL-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posisi Awal"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/edt_pos_awal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <!--                KETRANGAN-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan"
                    android:textColor="@color/primary_31"
                    android:textSize="16sp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edt_text_border"
                    android:paddingStart="10dp"
                    android:textColor="@color/primary_31"
                    android:textSize="15sp"
                    android:gravity="start|center"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="10dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Simpan"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/bw_100"
                    android:id="@+id/btn_simpan"
                    android:paddingVertical="16dp"
                    app:backgroundTint="@color/primary_71"
                    app:cornerRadius="50dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</layout>
