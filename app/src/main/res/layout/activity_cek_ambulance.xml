                        android:textSize="14sp" />

                    <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/tas_p3k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:background="@drawable/bg_edt_text_border"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginVertical="15dp"
                    android:background="@color/bw_70" />
                <!--                keterangan-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Keterangan"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txtketerangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:background="@drawable/bg_edt_text_border"
                        android:textColor="@color/primary_31"
                        android:textSize="14sp" />
                </LinearLayout>
                <!--btn-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginVertical="24dp">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Draft"
                        android:layout_weight="1"
                        android:textColor="@color/primary_31"
                        android:id="@+id/btn_draft"
                        android:paddingVertical="16dp"
                        app:backgroundTint="@color/primary_94"
                        app:cornerRadius="100dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginBottom="4dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Submit"
                        android:layout_marginStart="11dp"
                        android:layout_weight="1"
                        android:textColor="@color/bw_100"
                        android:id="@+id/btn_submit"
                        android:paddingVertical="16dp"
                        app:backgroundTint="@color/primary_71"
                        app:cornerRadius="100dp"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>
            </LinearLayout>
